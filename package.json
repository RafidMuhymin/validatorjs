{
  "name": "@chantouchsek/validatorjs",
  "version": "0.0.7",
  "description": "The validator-js library makes data validation in JavaScript very easy in both the browser and Node.js.",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc",
    "test": "jest --passWithNoTests --bail --detectOpenHandles",
    "test:cov": "jest --coverage",
    "release": "standard-version && git push --follow-tags origin main && yarn publish",
    "lint:js": "eslint --ext \".js,.ts\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "yarn lint:js && yarn lint:prettier",
    "lintfix": "prettier --write --list-different . && yarn lint:js --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chantouchsek/validator-js.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "validator",
    "validator-js",
    "node"
  ],
  "author": {
    "name": "Chantouch Sek",
    "email": "chantouchsek.cs83@gmail.com",
    "url": "https://chantouch.me"
  },
  "engines": {
    "node": "^12.20.0 || >=14.13.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache",
    "*.**": "prettier --check --ignore-unknown"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chantouchsek/validator-js/issues"
  },
  "homepage": "https://github.com/chantouchsek/validator-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.3",
    "node-notifier": "^10.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "escape-string-regexp": "^5.0.0",
    "lodash": "^4.17.21"
  }
}
